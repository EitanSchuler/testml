== Config and Env Vars

                TESTML_ROOT
                TESTML_INPUT
                TESTML_INPUT_DIR
                TESTML_INPUT_FILE
                TESTML_INPUT_PATH
                TESTML_EXEC_PATH

   --diff       TESTML_DIFF

   --cache      TESTML_CACHE
-l --lang       TESTML_LANG
-b --bin        TESTML_BIN
-f --config     TESTML_CONFIG
-I --lib        TESTML_LIB
-R --run        TESTML_RUN
-P --path       TESTML_PATH
-B --bridge     TESTML_BRIDGE

-c --compile
-e --eval
-s --status
   --info
-h --help
   --version
   --clean

-p --print
-o --output
-D --diff       TESTML_DIFF
-O --only
-x --debug      TESTML
-L --log
-v --verbose    TESTML_VERBOSITY -1 0 1 2  -q -v -vv
-q --quiet
