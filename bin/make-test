#!/bin/bash

set -e

rm -f test/*.tml

cp ../test/*.tml ../test/testml-bridge.coffee test/

if [[ -d ../test/coffee ]]; then
  cp ../test/coffee/testml-bridge.coffee test/coffee-testml-bridge.coffee

  for test in ../test/coffee/*.tml; do
    cp "$test" "test/coffee-${test#../test/coffee/}"
  done
fi

perl -e 'print "$_\n" for map {s!^test/(.*)\.tml$!$1!;$_} @ARGV' test/*.tml > test/list
