[[ -n ${ZSH_VERSION-} ]] &&
  TESTML_ROOT="$0" ||
  TESTML_ROOT="${BASH_SOURCE[0]}"

TESTML_ROOT="$(cd "$(dirname "$TESTML_ROOT")" && pwd)"

export TESTML_ROOT
export PATH="$TESTML_ROOT/bin:$PATH"
export MANPATH="$TESTML_ROOT/man:$MANPATH"
export PERL5LIB="$TESTML_ROOT/lib:$PERL5LIB"

